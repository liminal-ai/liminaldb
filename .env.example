# Convex
CONVEX_DEPLOYMENT=
CONVEX_URL=

# API key for Fastify to Convex authentication (generate with: openssl rand -hex 32)
CONVEX_API_KEY=

# WorkOS Auth
WORKOS_CLIENT_ID=
WORKOS_API_KEY=
WORKOS_REDIRECT_URI=http://localhost:5001/auth/callback

# WorkOS AuthKit server URL for MCP OAuth (e.g., https://auth.workos.com/client_xxx)
# Required for MCP OAuth issuer validation
WORKOS_AUTH_SERVER_URL=

# Cookie signing (generate with: openssl rand -base64 32)
COOKIE_SECRET=

# Base URL for the application (e.g., https://api.liminaldb.dev)
BASE_URL=

# MCP OAuth Discovery
# URL where the MCP resource is hosted (e.g., https://api.liminaldb.dev/mcp)
MCP_RESOURCE_URL=

# CORS (production only)
# Comma-separated list of allowed origins. Leave empty in development.
# Example: https://app.liminaldb.dev,https://admin.liminaldb.dev
CORS_ALLOWED_ORIGINS=

# Redis (for durable drafts)
# Connection string format: redis://user:password@host:port
# For Upstash: use the REDIS_URL from your Upstash dashboard
REDIS_URL=

# Test user credentials (for integration tests)
# Create a test user in WorkOS dashboard and add credentials here
TEST_USER_EMAIL=
TEST_USER_PASSWORD=
